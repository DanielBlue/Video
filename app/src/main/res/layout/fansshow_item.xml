<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="1111"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tv_tag">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fans_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/fans_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/fans_picture"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/fans_picture"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fans_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fans_nickname"
            android:layout_alignStart="@id/fans_nickname"
            android:layout_toEndOf="@id/fans_picture"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/tv_fans_message"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fans_attemtion_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fans_message"
            android:layout_alignStart="@id/fans_message"
            android:layout_toEndOf="@id/fans_picture"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/tv_fans_message"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bt_fans_attention"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_round_da6464"
            android:gravity="center"
            android:text="@string/bt_attention"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>